<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tlo"
    tools:context="com.example.tadziu.forrunners1.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:weightSum="1">


        <TextView
            android:text="Wybierz czynnosc"
            android:textColor="#FFFFFF"
            android:textSize="30dp"

            android:layout_width="359dp"
            android:layout_height="38dp"
            android:id="@+id/textView2" />


        <Button
            android:text="BIEGANIE"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/butBieganie"
            android:layout_marginTop="27dp"
            android:onClick="onClickBieganie"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="MOJE TRASY"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mojeTrasy"
            android:onClick="onClickMojeTrasy"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/butBieganie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="TRENINGI"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/treningi"
            android:onClick="onClickTreningi"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/mojeTrasy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>




</RelativeLayout>
